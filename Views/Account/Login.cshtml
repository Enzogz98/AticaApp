@model AticaApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_Layout"; // Para mantener la barra de navegación si la tienes
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-dark text-white text-center">
                    <h3>Acceso al Sistema</h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label class="form-label">Nombre de Usuario</label>
                            <input asp-for="Username" class="form-control" placeholder="Ingrese su usuario" required />
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label">Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="********" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted text-center">
                    AticaApp &copy; 2024
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
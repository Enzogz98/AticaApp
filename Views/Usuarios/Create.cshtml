@model AticaApp.Models.Usuario
@{
    ViewData["Title"] = "Crear Usuario";
    var rolActual = ViewBag.RolActual as string;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Crear Usuario</h4>
        </div>

        <div class="card-body">
            <form id="createUserForm">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" id="Nombre" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Apellido</label>
                        <input type="text" id="Apellido" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Documento</label>
                        <input type="text" id="Documento" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nombre de Usuario (Username)</label>
                        <input type="text" id="Username" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" id="Email" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    <input type="password" id="PasswordPlano" class="form-control" />
                </div>

                <div class="mb-4">
                    <label class="form-label">Rol</label>

                    @if (rolActual == "Administrador")
                    {
                        <select id="Rol" class="form-select">
                            <option value="Administrador">Administrador</option>
                            <option value="Usuario" selected>Usuario</option>
                        </select>
                    }
                    else
                    {
                        <input type="text" id="Rol" class="form-control" value="Usuario" readonly />
                    }
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="button" class="btn btn-primary px-4" onclick="guardarUsuario()">Guardar Usuario</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        function guardarUsuario() {
            const usuarioObj = {
                Nombre: $('#Nombre').val(),
                Apellido: $('#Apellido').val(),
                Documento: $('#Documento').val(),
                Username: $('#Username').val(),
                Email: $('#Email').val(),
                Rol: $('#Rol').val()
            };

            const passPlano = $('#PasswordPlano').val();

            $.ajax({
                url: '@Url.Action("Create", "Usuarios")',
                type: 'POST',
                data: {
                    usuario: usuarioObj,
                    passwordPlano: passPlano
                },
                headers: {
                    "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                },
                success: function () {
                    alert("Usuario creado con éxito.");
                    window.location.href = '@Url.Action("Index", "Usuarios")';
                },
                error: function (xhr) {
                    alert("Error al crear usuario: " + xhr.responseText);
                }
            });
        }
    </script>
}

@model AticaApp.Models.Usuario
@{
    ViewData["Title"] = "Detalle Usuario";
    var rolActual = ViewBag.RolActual as string;
}

<h2>Detalle Usuario</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt><dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Apellido</dt><dd class="col-sm-10">@Model.Apellido</dd>
        <dt class="col-sm-2">Documento</dt><dd class="col-sm-10">@Model.Documento</dd>
        <dt class="col-sm-2">Email</dt><dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Username</dt><dd class="col-sm-10">@Model.Username</dd>
        <dt class="col-sm-2">Rol</dt><dd class="col-sm-10">@Model.Rol</dd>
    </dl>
</div>

<div>
    @if (rolActual == "Administrador" || (Context.Session.GetInt32("UsuarioActualId") == Model.Id))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
@model IEnumerable<AticaApp.Models.Usuario>
@{
    ViewData["Title"] = "Gestión de Usuarios";
    var rolActual = ViewBag.RolActual as string;
}

<div class="container mt-4">
    <h2>Listado de Usuarios</h2>

    @if (rolActual == "Administrador")
    {
        <a asp-action="Create" class="btn btn-primary mb-3">Agregar Usuario</a>
    }

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Documento</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Documento</td>
                    <td>@item.Email</td>
                    <td>@item.Rol</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Ver</a>
                        @if (rolActual == "Administrador" || (Context.Session.GetInt32("UsuarioActualId") == item.Id))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                        }
                        @if (rolActual == "Administrador")
                        {
                            <form method="post" asp-action="Delete" asp-route-id="@item.Id" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Confirmar eliminación?')">Eliminar</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @* vacío o añade scripts si los necesitas *@
}
